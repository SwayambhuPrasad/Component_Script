{
  "package_version": 2,
  "version": "0.2.5",
  "name": "as_framework",
  "description": "Activity Studio Applet Framework",
  "main": "./dist/main.js",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "chokidar": "^3.5.3",
    "express": "^4.17.3",
    "socket.io": "^4.4.1",
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.4"
  },
  "author": "Pranav S Koundinya",
  "editor": ">=3.3.2",
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -w",
    "prepare": "husky install",
    "install": "npm run build"
  },
  "panels": {
    "collabDebug": {
      "title": "Applet Debug",
      "type": "dockable",
      "main": "./dist/collabDebugPanel.js"
    },
    "collabPreview1": {
      "title": "Collab Preview",
      "type": "dockable",
      "main": "./dist/collabPreviewPanel.js",
      "size": {
        "min-width": 600,
        "min-height": 600,
        "width": 800,
        "height": 900
      }
    },
    "collabPreview2": {
      "title": "Collab Preview",
      "type": "dockable",
      "main": "./dist/collabPreviewPanel.js",
      "size": {
        "min-width": 600,
        "min-height": 600,
        "width": 800,
        "height": 900
      }
    }
  },
  "contributions": {
    "asset-db": {
      "mount": {
        "path": "./framework/assets",
        "readonly": true
      }
    },
    "menu": [
      {
        "path": "Activity Studio/Applet Controller",
        "label": "Create Applet Controller",
        "message": "create-template"
      },
      {
        "path": "Activity Studio/Translations",
        "label": "Create Translation Template",
        "message": "create-csv"
      },
      {
        "path": "Activity Studio/Debug Tools",
        "label": "Open Collab Debugger",
        "message": "open-collab-debug"
      }
    ],
    "messages": {
      "create-template": {
        "methods": [
          "createTemplate"
        ]
      },
      "create-csv": {
        "methods": [
          "createTranslations"
        ]
      },
      "open-collab-debug": {
        "methods": [
          "openCollabDebug"
        ]
      },
      "get-server-port": {
        "methods": [
          "collabDebug.getServerPort"
        ]
      }
    },
    "scene": {
      "script": "./dist/scene.js"
    },
    "builder": "./dist/builder.js"
  }
}
